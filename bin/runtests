#!/usr/bin/env python

"""
Usage: python RunTests.py

Run a python GUI which starts up a UnitTestRunner for the Twisted
test-suite.
"""

### Twisted Preamble
# This makes sure that users don't have to set up their environment
# specially in order to run these programs from bin/.
import sys,os,string

if string.find(os.path.abspath(sys.argv[0]),'Twisted') != -1:
    sys.path.append(os.path.dirname(
        os.path.dirname(os.path.abspath(sys.argv[0])))) 
### end of preamble

from twisted.test import test_all

def runText():
    from pyunit import unittest
    from twisted.test import test_all
    runner = unittest.TextTestRunner()
    runner.run(test_all.testSuite())
    
def runGUI():
    try:
        import Tkinter
    except ImportError:
        raise "error"
    try:
        from pyunit import unittestgui
        unittestgui.main('twisted.test.test-all.testSuite')
    except Tkinter.TclError:
        raise "error"
try:
    runGUI()
except "error":
    runText()
