#!/usr/bin/env python

"""
Usage: mktelnetserver portno username password

Creates a very basic telnet serverset which will allow you to execute
single-line python commands.
"""

### Twisted Preamble
# This makes sure that users don't have to set up their environment
# specially in order to run these programs from bin/.
import sys,os,string

if string.find(os.path.abspath(sys.argv[0]),'Twisted') != -1:
    sys.path.append(os.path.dirname(
        os.path.dirname(os.path.abspath(sys.argv[0])))) 
### end of preamble

from twisted.protocols import telnet
from twisted.internet import main,tcp
import sys

portno,username,password = sys.argv[1:]

try:
    portno = int(portno)
except:
    pass

a = main.Application("telnet")
t = telnet.ShellFactory()
t.username = username
t.password = password
a.addPort(tcp.Port(portno, t))
a.save()
